public TokenPass(int playerCount){
  board = new int[playerCount];
  currentPlayer = (int)(Math.random() * playerCount);
    for(int i = 0; i < playerCount; i++){
      board[i] = (int)(Math.random() * 10 + 1);
    
    }
  
}

