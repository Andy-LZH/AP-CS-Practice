public void distributeCurrentPlayerTokens(){
  int value = board[currentPlayer];
  board[currentPlayer] = 0;
  int index = currentPlayer + 1;
    while(value != 0){
      if(index < board.length){
        board[index] ++;
        index ++;
        value --;
      }else{
        index = 0;
        board[index]++;
        value --;
        index ++;
      
      
      }
    
    
    }

}
