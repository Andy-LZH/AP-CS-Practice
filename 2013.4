public SkyView(int numRows, int numCols, double[] scanned){
  
    view = double[numRows][numCols];
    int index = 0;
    for(int i = 0; i < numRows; i ++){
      if(i % 2 == 0){
        for(int a = 0; a < numCols; a++){
          view[i][a] = scanned[index];
          index ++;
        
        }
      }else{
         for(int b = numCols - 1; b > -1; b--){
         
            view[i][b] = scanned[index];
            index ++;
         
         }
      
      }
    
    
    }



}
