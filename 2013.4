  int denomenator = (endRow - startRow + 1) * (endCol - startCol + 1);
  double sum = 0;
    for(int i = startRow; i < endRow + 1; i ++){
        
    
      for(int c = startCol; c < endCol + 1; c ++){
        sum += view[i][c];
      
      }
    }
